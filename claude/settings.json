{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(wget:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Read(.env)",
      "Read(.env.*)"
    ],
    "ask": []
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Bottling",
      "Brewing",
      "Burping",
      "Carbonating",
      "Checking gravity",
      "Conditioning",
      "Crushing malt",
      "Decocting",
      "Dry Hopping",
      "Fermenting",
      "Kegging",
      "Lagering",
      "Lautering",
      "Mashing",
      "Milling",
      "Pitching yeast",
      "Racking",
      "Sparging",
      "Tapping kegs"
    ]
  }
}
